<h1>Categories</h1>
<p>These are the product categories</p>

<table class="table">
	<thead>
		<tr>
			<th>Category</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Edit', edit_category_path(category) %></td>
			<td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>	
<% end %>
</table>

